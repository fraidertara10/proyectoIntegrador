---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			/* Estilos generales */
			body {
				background-color: #e0f7fa;
			}

			/* Media queries para pantallas medianas */
			@media (max-width: 900px) {
				.grid-cols-2 {
					grid-template-columns: repeat(1, minmax(0, 1fr));
				}
				nav.container {
					width: 100%;
					flex-direction: column;
					align-items: flex-start;
				}
				nav.menu ul {
					flex-direction: column;
					width: 100%;
				}
				nav.menu ul li {
					width: 100%;
					margin-bottom: 10px;
				}
			}

			/* Media queries para pantallas peque√±as */
			@media (max-width: 600px) {
				nav.container {
					height: auto;
				}
				nav.menu ul {
					flex-direction: column;
				}
				nav.menu ul li {
					margin-bottom: 5px;
				}
			}
		</style>
	</head>
	<body class="bg-white">
		<div>
			<nav class="container w-3/5 mx-auto justify-between flex h-16 items-center rounded-lg bg-blue-200">
				<div class="ml-3">
					<a href="" class="flex items-center space-x-1">
						<span class="text-blue-800 font-semibold text-lg">G.</span>
						<span class="text-lg">Student</span>
					</a>
				</div>
				<menu class="menu">
					<ul class="flex justify-between space-x-3">
						<li>
							<a href="" class="bg-blue-500 hover:bg-blue-600 p-2 rounded-lg transition-colors duration-300">Mis juegos</a>
						</li>
						<li>
							<a href="#" class="bg-blue-500 hover:bg-blue-600 p-2 rounded-lg transition-colors duration-300">Deportes</a>
						</li>
						<li>
							<a href="#" class="bg-blue-500 hover:bg-blue-600 p-2 rounded-lg transition-colors duration-300">Entretenimiento</a>
						</li>
						<li>
							<a href="#" class="bg-blue-500 hover:bg-blue-600 p-2 rounded-lg transition-colors duration-300">Contacto</a>
						</li>
					</ul>
				</menu>




				<div class="mr-3">
					<a href="" class="text-blue-800 text-lg font-semibold">Logo</a>
				</div>
			</nav>



			<div class="w-3/5 mx-auto mt-6 rounded-lg">
				<div class="grid grid-cols-2 gap-6">
					<div class=" bg-blue-200 rounded-lg p-4 flex flex-col items-center justify-center transition duration-300 transform hover:scale-105">
						<div class="w-40 h-40 overflow-hidden bg bg-[url(https://cdn.pixabay.com/photo/2013/07/13/12/38/dices-160005_640.png)] bg-[length:100%_100%]"></div>
						<a href="/src/pages/juego_dos.astro" class="mt-4 py-2 px-4 bg-blue-500 text-white rounded-lg text-center w-full transition duration-300 hover:bg-blue-600">Jugar</a>
					</div>
					<div class="bg-blue-200 rounded-lg p-4 flex flex-col items-center justify-center transition duration-300 transform hover:scale-105">
						<div class="w-40 h-40 overflow-hidden bg bg-[url(https://cdn.pixabay.com/photo/2013/07/13/12/38/dices-160005_640.png)] bg-[length:100%_100%]"></div>
						<a href="#" class="mt-4 py-2 px-4 bg-blue-500 text-white rounded-lg text-center w-full transition duration-300 hover:bg-blue-600">Jugar</a>
					</div>
				</div>
			</div>

			<div class="w-3/5  mx-auto mt-6 rounded-lg">
				<div class="grid grid-cols-2 gap-6">
					<div class="bg-blue-200 rounded-lg p-4 flex flex-col items-center justify-center transition duration-300 transform hover:scale-105">
						<div class="w-40 h-40 overflow-hidden bg bg-[url(https://cdn.pixabay.com/photo/2013/07/13/12/38/dices-160005_640.png)] bg-[length:100%_100%]"></div>
						<a href="/src/pages/juego.astro" class="mt-4 py-2 px-4 bg-blue-500 text-white rounded-lg text-center w-full transition duration-300 hover:bg-blue-600">Jugar</a>
					</div>
					<div class="bg-blue-200 rounded-lg p-4 flex flex-col items-center justify-center transition duration-300 transform hover:scale-105">
						<div class="w-40 h-40 overflow-hidden bg bg-[url(https://cdn.pixabay.com/photo/2013/07/13/12/38/dices-160005_640.png)] bg-[length:100%_100%]"></div>
						<a href="#" class="mt-4 py-2 px-4 bg-blue-500 text-white rounded-lg text-center w-full transition duration-300 hover:bg-blue-600">Jugar</a>
					</div>
				</div>
			</div>
		</div>

		<div class=" w-full justify-center flex">
			<button class="p-2 bg-blue-300 rounded-lg w-1/5 mt-10"><a href="/src/pages/Cuestionario.astro">  terminar y generar la autoevaulacion</a></button>
		</div>

		<slot />
	</body>
</html>
