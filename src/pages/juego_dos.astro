<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adivina el Animal</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .small-image {
            max-width: 200px; /* Puedes ajustar este valor según lo necesites */
            max-height: 200px;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-8 text-center">
        <h1 class="text-3xl font-bold mb-4">Adivina el Animal</h1>
        <div class="mx-auto w-[20%_20%]">
            <img id="animalImage" src="" alt="Animal" class="mb-4 w-[100%_100%] small-image">
        </div>
       
        <input type="text" id="animalName" class="border border-gray-300 p-2 rounded-lg mb-4" placeholder="Escribe el nombre del animal">
        <button id="submitBtn" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Enviar</button>
        <div id="result" class="text-xl mt-4"></div>
    </div>

    <script>
        const animals = [
            { name: "perro", image: "https://png.pngtree.com/png-clipart/20231016/original/pngtree-dog-standing-cartoon-character-png-image_13322602.png" },
            { name: "gato", image: "https://via.placeholder.com/200?text=Gato" },
            { name: "conejo", image: "https://png.pngtree.com/png-clipart/20230927/original/pngtree-cartoon-rabbit-on-white-background-vector-png-image_13154880.png" },
            { name: "pájaro", image: "https://via.placeholder.com/200?text=P%C3%A1jaro" }
        ];

        // Obtener elementos del DOM
        const animalImage = document.getElementById("animalImage");
        const animalNameInput = document.getElementById("animalName");
        const resultDiv = document.getElementById("result");

        // Función para obtener un animal aleatorio
        function getRandomAnimal() {
            return animals[Math.floor(Math.random() * animals.length)];
        }

        // Función para mostrar un animal aleatorio en la página
        function displayRandomAnimal() {
            const randomAnimal = getRandomAnimal();
            animalImage.src = randomAnimal.image;
            animalImage.alt = randomAnimal.name;
        }

        // Manejar el evento de clic en el botón de enviar
        document.getElementById("submitBtn").addEventListener("click", function() {
            const userAnswer = animalNameInput.value.toLowerCase().trim(); // Convertir a minúsculas y eliminar espacios en blanco al principio y al final
            const correctAnimalName = animalImage.alt.toLowerCase();
            if (userAnswer === correctAnimalName) {
                resultDiv.textContent = "¡Correcto!";
            } else {
                resultDiv.textContent = "¡Incorrecto! Inténtalo de nuevo.";
            }
            // Limpiar el campo de entrada después de 2 segundos
            setTimeout(function() {
                animalNameInput.value = "";
                resultDiv.textContent = "";
                displayRandomAnimal();
            }, 2000);
        });

        // Mostrar un animal aleatorio al cargar la página
        displayRandomAnimal();
    </script>
</body>
</html>
